{
    "env": {
        "browser": true,
        "node": true,
        "amd": true,
        "jasmine": true
    },

    "globals": {
        "baidu": true,
        "T": true,
        "alert": true,
        "confirm": true,
        "prompt": true
    },

    "rules": {
        "indent":  [2, "spaces", 4],

        "no-comma-dangle": 2,
        "no-debugger": 2,
        "no-dupe-keys": 2,
        "no-empty-class": 2,
        "no-extra-semi": 2,
        "no-invalid-regexp": 2,
        "no-reserved-keys": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,

        "valid-jsdoc": [2, {
            "prefer": {
                "return": "returns"
            },
            "requireReturn": false
        }],
        "valid-typeof": 2,

        "block-scoped-var": 1,
        "curly": [2, "all"],
        "dot-notation": 2,
        "eqeqeq": [2, "allow-null"],
        "guard-for-in": 1,
        "no-else-return": 1,
        "no-eval": 1,
        "no-extend-native": 2,
        "no-loop-func": 1,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-wrappers": 2,
        "no-proto": 2,
        "no-iterator": 2,
        "no-self-compare": 2,
        "no-with": 1,
        "radix": 2,
        "wrap-iife": [2, "any"],
        "no-delete-var": 1,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-unused-vars": [2, {"vars": "local", "args": "none"}],
        "no-use-before-define": [2, "nofunc"],

        "brace-style": [1, "stroustrup", {}],
        "camelcase": 2,
        "eol-last": 2,
        "new-cap": 2,
        "no-array-constructor": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-space-before-semi": 2,
        "no-trailing-spaces": 2,
        "no-wrap-func": 2,
        "no-mixed-spaces-and-tabs": 2,
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "space-after-keywords": 2,
        "space-in-brackets": [2, "never"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        // "space-unary-word-ops": 2,

        // "max-depth": [2, 6],
        "max-len": [2, 120, 4],
        "max-params": [1, 6],
        "max-statements": [1, 50]
    }
}
