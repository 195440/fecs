@import "var"
@import "reset"
@import "mixin"

$footer-text-color = #807b91

// animation keyframes
@keyframes changeOpacity {
    from {
        opacity: 0
    }
    to {
        opacity: 1
    }
}

@keyframes changeOpacityReverse {
    from {
        opacity: 1
    }
    to {
        opacity: 0
    }
}

// font
@font-face {
    font-family: "fzyxjt"
    src: url("../font/fzyxjt.eot") /* IE9 */
    src:
        url("../font/fzyxjt.eot?#iefix") format("embedded-opentype"),
        url("../font/fzyxjt.woff") format("woff"),
        url("../font/fzyxjt.ttf") format("truetype"),
        url("../font/fzyxjt.svg#fzyxjt") format("svg")
    font-style: normal
    font-weight: normal
}

// comm
a {
    text-decoration: none

    &:hover {
        text-decoration: underline
    }
}

.top-nav {
    reset-list()
    clearfix()

    li {
        float: left

        a {
            size(80px, 40px)
            display: block
            color: #d2c9d4
            text-decoration: none
            line-height: 40px
            font-size: 14px
            text-align: center

            &:hover {
                color: #fff
            }

            &.cur {
                background-color: #eb6060
                color: #fff
            }
        }

        &.git-star {
            padding-left: 10px
            iframe {
                // 为了对其，宽度暂时改成90px，如果star超过1000，务必加大宽度
                size(90px, 20px)
                margin: 10px auto
            }
        }
    }
}

.logo {
    size(160px, 55px)
    image-2x('../img/sprite_icon@2x.png', 500px, 300px)
    background: url('../img/sprite_icon.png') 0 0 repeat-x

    a {
        size(160px, 55px)
        display: block
        text-indent: -9999em
    }
}

.header {
    height: 100px

    .header-inner {
        max-width: 1000px
        height: 100px
        margin: 0 auto
        position: relative
    }

    .logo {
        absolute(25px, null, null, 0)
    }

    .top-nav {
        absolute(25px, 0, null, null)
    }
}



.footer {
    overflow: hidden
    background-color: #313046
    color: $footer-text-color

    .footer-inner {
        width: 1000px
        margin: 0 auto

        .copyright {
            text-align: center
            padding: 20px 0
            font-size: 14px

            a {
                transition(color .15s)
                color: $footer-text-color

                &:hover {
                    color: #69a1c7
                    text-decoration: none
                }
            }
        }
    }
}

#power-by {
    margin-left: 1em
    padding-left: 1em
    border-left: 1px solid #6b677a
}

@media screen and (max-width: 1100px) {
    .header {
        .header-inner {
            margin: 0 20px
        }
    }

    .footer {
        .footer-inner {
            width: 100%
        }
    }
}

@media screen and (max-width: 720px) {
    .header {
        .header-inner {
            .logo {
                size(120px, 40px)
                background-size: 400px

                a {
                    size(120px, 40px)
                }
            }

            .top-nav {
                li {
                    a {
                        size(70px, 30px)
                        line-height: 30px
                        font-size: 12px
                    }

                    iframe {
                        width: 100px
                        height: 20px
                        margin: 5px auto
                    }
                }
            }
        }
    }
    .footer {
        .footer-inner {
            .copyright {
                font-size: 12px
                padding: 10px 0
            }

            #power-by {
                margin-left: 1em
            }
        }
    }
}

@media screen and (max-width: 630px) {
    .header {
        .header-inner {
            margin: 0
            overflow: hidden

            .logo {
                position: static
                margin: 20px 0 10px 15px
            }
            .top-nav {
                position: static
                display: flex
                background-color: rgba(101, 96, 134, .6)

                li {
                    flex: 1
                    a {
                        width: 100%
                    }

                    &.git-star {
                        absolute(20px, 5px, null, null)
                    }
                }
            }
        }
    }
}
