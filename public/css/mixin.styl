/**
 * 清除浮动
 */
clearfix() {
    display: block

    &:after {
        content: "."
        display: block
        height: 0
        clear: both
        visibility: hidden
    }
}

/**
 * 重设列表的样式
 */
reset-list() {
    list-style: none
    padding: 0
    margin: 0
}

/**
 * 设定宽高
 */
size($width, $height = $width) {
    width: $width
    height: $height
}

/**
 * position
 */
positiond($position, $args) {
    position: $position
    top: $args[0] if $args[0] != null
    right: $args[1] if $args[1] != null
    bottom: $args[2] if $args[2] != null
    left: $args[3] if $args[3] != null
}

/**
 * position: absolute
 */
absolute($args...) {
    positiond(absolute, $args)
}

/**
 * position: relative
 */
relative($args...) {
    positiond(relative, $args)
}

/**
 * position: fixed
 */
fixed($args...) {
    positiond(fixed, $args)
}

vendor(name, values...)
    for vendor in vendors
        if vendor == official
            {name} values
        else
            -{vendor}-{name} values

/**
 * transition
 */
transition() {
    vendor(transition, arguments)
}

/**
 * animation
 */
animation() {
    vendor(animation, arguments)
}


/**
 * 使用@2x图片资源
 */
image-2x($image, $width, $height) {
    @media (min--moz-device-pixel-ratio: 1.3),
        (-o-min-device-pixel-ratio: 2.6/2),
        (-webkit-min-device-pixel-ratio: 1.3),
        (min-device-pixel-ratio: 1.3),
        (min-resolution: 1.3dppx) {
        /* on retina, use image that's scaled by 2 */
        background-image: url($image)
        background-size: $width $height
    }
}

/**
 * media query
 */
media-query($device) {
    @media screen and (max-width: $device) {
        @content
    }
}
