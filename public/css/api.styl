@import "comm"
@import "highlight"

// 左侧导航宽度
$nav-width = 280px
// 紫色线颜色
$line-color = #756c8a

html {
    height: 100%
}

body {
    height: 100%
    overflow-x: hidden
    background-color: #454163
    background-image: -webkit-radial-gradient(#565378, #37324a)
    background-image:    -moz-radial-gradient(#565378, #37324a)
    background-image:     -ms-radial-gradient(#565378, #37324a)
    background-image:         radial-gradient(#565378, #37324a)
}

.api-nav {
    absolute(0, null, 0, 0)
    size($nav-width, 100%)
    border-right: 1px solid $line-color
    z-index: 10

    .logo {
        margin-top: 25px
        margin-left: 100px
    }

    .api-nav-list {
        reset-list()
        color: #fff
        margin-top: 40px
        margin-left: 100px

        li {
            a {
                transition: all .15s
                display: block
                color: #fff
                font-size: 16px
                height: 40px
                text-align: right
                padding-right: 45px
                line-height: 40px

                &.cur {
                    background-color: #d46362
                    color: #fff

                    &:hover {
                        background-color: #d46362
                    }
                }

                &:hover {
                    background-color: rgba(117, 108, 138, .5)
                    text-decoration: none
                    color: #fff
                }

                &.more {
                    &:hover {
                        background-color: transparent
                        cursor: default
                    }
                }
            }

            dl {
                dd {
                    a {
                        color: #a9a0b1
                        font-size: 14px
                        height: 30px
                        line-height: 30px
                    }
                }
            }
        }
    }
}

.api-content {
    position: relative
    max-width: 1200px
    margin-left: $nav-width
    height: 100%
    overflow-y: scroll

    .top-nav {
        absolute(25px, 100px, null, null)
    }

    .logo {
        display: none
    }

    .api-entry {
        padding: 80px 100px 0 100px
        color: #fff
        line-height: 1.5
        font-size: 14px

        .copyright {
            border-top: 1px solid $line-color
            margin-top: 80px
            padding-top: 20px
            margin-bottom: 50px
            color: #d2c9d4
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        p,
        table,
        pre {
            margin-top: .5em
            margin-bottom: .5em
        }

        h1,
        h2,
        h3,
        h4,
        h5 {
            font-weight: 400
        }

        h1 {
            font-size: 32px
            color: #eb605f

        }

        h2 {
            font-size: 28px
            color: #eb605f
        }

        h3,
        h4,
        h5 {
            font-size: 16px
            color: #fff
        }

        p {
            color: #d2c9d4
        }

        a {
            color: #6aa3c9
        }

        pre {
            background-color: #272822
            padding: 1em 2em

            code {
                font-size: 100%
                border-radius: 0
            }
        }

        hr {
            height: 0
            line-height: 0
            border: 0
            border-bottom: 1px solid $line-color
            margin-top: 4em
            margin-bottom: 3em
        }

        table {
            width: 100%

            td {
                color: #d2c9d4
            }

            td,
            th {
                border: 1px solid $line-color
                padding: .5em 1em
                text-align: left
                min-width: 60px
            }
        }
    }
}

@media screen and (max-width: 1200px) {
    .api-nav {
        width: 200px

        .logo {
            margin-left: 20px
        }

        .api-nav-list {
            margin-left: 0
        }
    }

    .api-content {
        margin-left: 200px
    }
}

@media screen and (max-width: 1100px) {
    .api-content {

        .top-nav {
            right: 40px
        }

        .api-entry {
            padding: 80px 40px 0 40px
        }
    }
}

@media screen and (max-width: 1000px) {
    body {
        height: auto
        background-image: none
    }

    .api-nav {
        display: none
    }

    .api-content {
        margin-left: 0
        height: auto
        overflow-x: hidden

        .logo {
            display: block
            margin: 25px 0 0 20px
        }

        .top-nav {
            right: 20px
        }

        .api-entry {
            padding-top: 0

            .copyright {
                margin-top: 50px
                margin-bottom: 20px
            }
        }
    }
}

@media screen and (max-width: 720px) {
    .api-content {
        .logo {
            size(120px, 40px)
            display: block
            background-size: 400px

            a {
                size(120px, 40px)
            }
        }

        .top-nav {

            li {
                a {
                    size(70px, 30px)
                    line-height: 30px
                    font-size: 12px
                }

                iframe {
                    width: 100px
                    height: 20px
                    margin: 5px auto
                }
            }
        }

        .api-entry {
            font-size: 14px
            padding: 10px 20px 0 20px

            .copyright {
                margin-top: 30px
                margin-bottom: 10px
                padding-top: 10px
            }

            h1 {
                font-size: 28px

            }

            h2 {
                font-size: 20px
            }

            h3,
            h4,
            h5 {
                font-size: 20px
            }

            pre {
                overflow-x: auto
            }

            hr {
                margin-top: 2.5em
                margin-bottom: 2em
            }

            table {
                td,
                th {
                    padding: .3em .5em
                    text-align: left
                    min-width: 60px
                }
            }
        }
    }
}

@media screen and (max-width: 630px) {
    .api-content {
        .logo {
            margin: 20px 0 10px 15px
        }

        .top-nav {
            position: static
            display: flex
            background-color: rgba(101, 96, 134, .6)

            li {
                flex: 1
                a {
                    width: 100%
                }

                &.git-star {
                    absolute(20px, 5px, null, null)
                }
            }
        }

        .api-entry {
            font-size: 12px

            h1 {
                font-size: 20px

            }

            h2 {
                font-size: 16px
            }

            h3,
            h4,
            h5 {
                font-size: 14px
            }

            pre {
                padding: .5em 1em
            }

            table {
                td,
                th {
                    padding: .2em .3em
                    min-width: auto
                }
            }
        }
    }
}
